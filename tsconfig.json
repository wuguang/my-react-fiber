{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "removeComments": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "baseUrl": "./",
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}